[Unit]
Description=RoboCamara Photo Capture Service
After=multi-user.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=robotgenio
WorkingDirectory=/home/robotgenio/robotcamara/scripts
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/robotgenio/.Xauthority"
ExecStartPre=/bin/sleep 10
ExecStart=/usr/bin/python3 /home/robotgenio/robotcamara/scripts/main.py
Restart=always
RestartSec=10s
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
